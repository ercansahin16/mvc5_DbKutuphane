@model MVCKutuphane.Models.Siniflarim.Class1

@{
    Layout = null;
}
<link href="~/web/css/freelancer.css" rel="stylesheet" />
<link href="~/Content/vitrin.css" rel="stylesheet" />
<link href="~/web/css/freelancer.min.css" rel="stylesheet" />
<script src="~/webcard/app.js"></script>
<link href="~/webcard/s.css" rel="stylesheet" />

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>mvc-kütüphane</title>

    <!-- Custom fonts for this theme -->
    <link href="~/web/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- Theme CSS -->
    <link href="~/web/css/custom-freelancer.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg bg-dark text-uppercase fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#page-top">Dİjİtal Okuma Platformu</a>
            <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#portfolio">Kİtaplarımız</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#about">Hakkımızda</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="#contact">İletİşİm</a>
                    </li>
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="/Login/GirisYap">Kullanıcı Girişi</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Masthead -->
    <header class="masthead bg-secondary text-white text-center">
        <div class="container d-flex align-items-center flex-column" style="background-color: #28527a;border-radius:20px ">

            <!-- Masthead Avatar Image -->
            <img class="masthead-avatar mb-5" src="~/web/img/library2.png" alt="">

            <!-- Masthead Heading -->
            <h1 class="masthead-heading text-uppercase mb-0">Kütüphanemİze Hoşgeldİnİz</h1>

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Masthead Subheading -->
            <p class="masthead-subheading font-weight-light mb-0">"Kitaplar Zekanın Çocuklarıdır."</p>
            <p class="mb-2">Jonathan Swift</p>

        </div>
    </header>

    <!-- Portfolio Section -->
    <div class="gs-cards-container">
        <div class="gs-cards-grid">
            @foreach (var item in Model.Deger1)
            {
                <a  class="gs-card " style="background-image: url(@item.KITAPRESIM)">
                    <div class="gs-card-data" style="width:100%; height:100%">
                        <div class="gs-card-content" >
                            Kategori :   @item.TBLKATEGORI.ADI
                        </div>
                        <div class="gs-card-content">
                            Kitap Adı :   @item.AD
                        </div>
                        <div class="gs-card-content">
                            Yazar:   @item.TBLYAZAR.AD @item.TBLYAZAR.SOYAD
                        </div>
                        <div class="gs-card-content">
                            BasımYılı :   @item.BASIMYILI
                        </div>
                        <div class="gs-card-content">
                            Yayınevi :   @item.YAYINEVI
                        </div>
                        <div class="gs-card-content">
                            Sayfa :   @item.SAYFASAYISI
                        </div>
                        

                    </div>
                </a>
            }

        </div>
    </div>


    <!-- About Section -->
    <section class="page-section bg-dark text-white mb-0" id="about">
        <div class="container">

            <!-- About Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-white">Hakkımızda</h2>

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- About Section Content -->
            <div class="row">
                <div class="">
                    <p class="lead">Kitaplar, insanlık tarihi boyunca bilgi, kültür ve düşünce dünyasının en değerli hazinelerinden biri olmuştur. Farklı dönemlerde ve farklı coğrafyalarda yazılmış olan kitaplar, insanlara yeni ufuklar açar, hayal güçlerini genişletir ve bilgi birikimlerini artırır. Her bir kitabın kendine özgü bir hikayesi ve anlatımı vardır; kimisi insanın iç dünyasını keşfe çıkarırken, kimisi tarihî olayları gözler önüne serer. </p>
                </div>
                <div>
                    <p class="lead">Romanlar, hikayeler, şiirler, denemeler ve bilimsel eserler gibi çeşitli türlerde yazılan kitaplar, her yaştan ve her kesimden insan için vazgeçilmez birer yol arkadaşıdır. Kitapların sayfalarında kaybolarak, farklı dünyaları keşfetmek, farklı karakterlerle empati kurmak ve yeni bilgiler edinmek mümkündür. Dijital çağın hızla ilerlediği günümüzde bile, kitapların yeri ve önemi asla azalmamış, aksine e-kitaplar ve sesli kitaplar gibi yeni formatlarla daha geniş kitlelere ulaşmıştır. Kitaplar, bilginin ışığını geleceğe taşıyan, medeniyetin yapı taşlarıdır.</p>
                </div>
            </div>



        </div>
    </section>

    <!-- Contact Section -->
    <section class="page-section" id="contact">
        <div class="container">

            <!-- Contact Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">İletİşİm</h2>

            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Contact Section Form -->
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <!-- To configure the contact form email address, go to mail/contact_me.php and update the email address in the PHP file on line 19. -->
                    @using (Html.BeginForm("Index", "vitrin", FormMethod.Post))
                    {
                        <form name="sentMessage" id="contactForm" novalidate="novalidate">
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Ad Soyad</label>
                                    <input class="form-control" id="name" name="AD" type="text" placeholder="Ad Soyad" required="required" data-validation-required-message="Lütfen adı soyad giriniz.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>E-posta</label>
                                    <input class="form-control" id="email" name="MAIL" type="email" placeholder="E-posta" required="required" data-validation-required-message="Lütfen e-postanızı giriniz.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Mesaj Konusu</label>
                                    <input class="form-control" id="phone" name="KONU" type="tel" placeholder="Konu Başlığı" required="required" data-validation-required-message="Lütfen mesaj konusunu giriniz.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="form-group floating-label-form-group controls mb-0 pb-2">
                                    <label>Mesajınız</label>
                                    <textarea class="form-control" name="MESAJ" id="message" rows="5" placeholder="Mesajınız" required="required" data-validation-required-message=" Lütfen mesajınızı giriniz."></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <br>
                            <div id="success"></div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-xl" id="sendMessageButton">Gönder</button>
                            </div>
                        </form>
                    }
                </div>
            </div>

        </div>
    </section>

    <!-- Footer -->
    <footer class="footer text-center">
        <div class="container">
            <div class="row">

                <!-- Footer Location -->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">Adresimiz :</h4>
                    <p class="lead mb-0">
                        06100 Ankara/Mamak
                        <br>Türkiye
                    </p>
                </div>

                <!-- Footer Social Icons -->
                <div class="col-lg-4 mb-5 mb-lg-0">
                    <h4 class="text-uppercase mb-4">Sosyal Medya Hesaplarımız</h4>
                    <a class="btn btn-outline-light btn-social mx-1" href="#">
                        <i class="fab fa-fw fa-facebook-f"></i>
                    </a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#">
                        <i class="fab fa-fw fa-twitter"></i>
                    </a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#">
                        <i class="fab fa-fw fa-linkedin-in"></i>
                    </a>
                    <a class="btn btn-outline-light btn-social mx-1" href="#">
                        <i class="fab fa-fw fa-dribbble"></i>
                    </a>
                </div>

                <!-- Footer About Text -->
                <div class="col-lg-4">
                    <h4 class="text-uppercase mb-4">Kütüphane Modülü</h4>
                    <p class="lead mb-0">
                        Asp.Net Mvc5 platformu ile bootstrap, Js ve css tasarımları ile dizayn edildi.
                    </p>
                </div>

            </div>
        </div>
    </footer>

    <!-- Copyright Section -->
    <section class="copyright py-4 text-center text-white">
        <div class="container">
            <small style="margin-right:5px">Copyright &copy;  2024</small> <a href="/AdminLogin/Login/">Admin Login</a>.
        </div>
    </section>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-to-top d-lg-none position-fixed ">
        <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

    <!-- Portfolio Modals -->
    <!-- Portfolio Modal Template -->
    @foreach (var item in Model.Deger1)
    {
        <div class="portfolio-modal modal fade" id="portfolioModal@item.ID" tabindex="-1" role="dialog" aria-labelledby="portfolioModal@item.IDLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl" role="document">
                <div class="modal-content">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">
                            <i class="fas fa-times"></i>
                        </span>
                    </button>
                    <div class="modal-body text-center">
                        <div class="container">
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <!-- Portfolio Modal - Title -->
                                    <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">Kitap Özet</h2>
                                    <!-- Icon Divider -->
                                    <div class="divider-custom">
                                        <div class="divider-custom-line"></div>
                                        <div class="divider-custom-icon">
                                            <i class="fas fa-star"></i>
                                        </div>
                                        <div class="divider-custom-line"></div>
                                    </div>
                                    <!-- Portfolio Modal - Image -->
                                    <img class="img-fluid rounded mb-5" src="@item.KITAPRESIM" alt="@item.AD">
                                    <!-- Portfolio Modal - Text -->
                                    <p class="mb-5">@item.AD</p>
                                    <button class="btn btn-primary" href="#" data-dismiss="modal">
                                        <i class="fas fa-times fa-fw"></i>
                                        Close Window
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Bootstrap core JavaScript -->
    <script src="~/web/vendor/jquery/jquery.min.js"></script>
    <script src="~/web/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="~/web/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Contact Form JavaScript -->
    <script src="~/web/js/jqBootstrapValidation.js"></script>
    <script src="~/web/js/contact_me.js"></script>

    <!-- Custom scripts for this template -->
    <script src="~/web/js/custom-freelancer.min.js"></script>

</body>

</html>
