@model MVCKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "OduncIade";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}


<div class="col-md-6 mx-auto">
    <h6 class="fw-bold ">Ödünç Kitap al </h6>
    <hr style="border:solid 2px black" />
    @using (Html.BeginForm("OduncGüncelle", "Odunc", FormMethod.Post))
    {
        <div class="form-group mt-5 fw-bolder" style="margin-bottom:15px">
            <label>İŞLEM ID</label>
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control", required = "required" })
            <br />
            <label>KİTAP ADI</label>
            @Html.TextBoxFor(k => k.TBLKITAP.AD, new { @class = "form-control", required = "required" })
            <br />
            <label>ÜYE ADI</label>
            @Html.TextBoxFor(k => k.TBLUYELER.ADI, new { @class = "form-control", required = "required" })
            <br />
            <label>PERSONEL ADI</label>
            @Html.TextBoxFor(k => k.TBLPERSONEL.PERSONEL, new { @class = "form-control", required = "required" })
            <br />
            <label>KİTAP ALIŞ TARİHİ</label>
            @Html.TextBoxFor(k => k.ALISTARIHI, "{0:dd.MM.yyyy}", new { @class = "form-control", required = "required" })
            <br />
            <label>KİTABIN TESLİM EDİLMESİ GEREKEN TARİH</label>
            @Html.TextBoxFor(k => k.IADETARIHI, "{0:dd.MM.yyyy}", new { @class = "form-control", required = "required" })
            <br />
            <label>ÜYENİN TESLİM TARİHİ</label>
            <input type="text" class="form-control" required="required" name="UYEGETIRTARIH" value="@DateTime.Now.ToShortDateString()" />
            <br />
            <label>GECİKME SÜRESİ (GÜN)</label>
            <input type="text" class="form-control" id="Gecinput" value="@ViewBag.dgr" />

        </div>
        <div>
            <button class="btn fw-semibold w-100" style=" background-color: #202f44; color: aliceblue")">Ödünç Kitabı Geri Al</button>
            @*<input type="hidden" value="False" name="ISLEMDURUM" />*@
        </div>

    }
</div>


<style>
    .d-flex-center {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .form-group {
        width: 100%;
        margin-top: 7%;
    }

    .form-control-custom, .btn-custom {
        width: 100%;
    }

    .col-md-6 {
        max-width: 275px; /* İstediğiniz maksimum genişliği ayarlayabilirsiniz */
        width: 100%;
    }
</style>