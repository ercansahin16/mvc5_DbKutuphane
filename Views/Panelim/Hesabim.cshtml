@model MVCKutuphane.Models.Entity.TBLUYELER

@{
    ViewBag.Title = "Hesabim";
    Layout = "~/Views/Shared/MyPanelim.cshtml";
}


<h2 class="mt-2 mb-3">Hesap Güncelleme</h2>



<div class="row">

    <div class="col-md-8">
        @using (Html.BeginForm("Hesabim", "Panelim", FormMethod.Post))
        {

            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td><span class="fw-bold">ID : </span></td>
                        <td>@Session["ID"].ToString()</td>
                    </tr>
                    <tr>
                        <td><span class="fw-bold">Mail Adresi : </span> </td>
                        <td> @Session["MAIL"].ToString()</td>
                    </tr>
                    <tr>
                        <td><span class="fw-bold">Ad :</span> </td>
                        <td>@Html.TextBoxFor(x => x.ADI, new { @class = "form-control", @required = "required" }) </td>
                    </tr>
                    <tr>
                        <td><span class="fw-bold">Soyad : </span></td>
                        <td>@Html.TextBoxFor(x => x.SOYADI, new { @class = "form-control", @required = "required" }) </td>
                    </tr>
                    <tr>
                        <td><span class="fw-bold">Kullanıcı adı : </span></td>
                        <td>@Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control", @required = "required" })</td>
                    </tr>
                    <tr>
                        <td><span class="fw-bold">Şifre : </span></td>
                        <td>@Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control", @required = "required" }) </td>
                    </tr>
                    <tr>
                        <td><span class="fw-bold">Okul : </span></td>
                        <td>@Html.TextBoxFor(x => x.OKUL, new { @class = "form-control", @required = "required" })</td>
                    </tr>

                </tbody>
            </table>
            <input type="submit" value="Kaydet" class="btn btn-warning w-100" />
        }
    </div>





    <div class="col-md-4">

        <img src="@Model.FOTOGRAF" width="300px" class="mx-auto d-flex" />

        <form action="/Panelim/resimyukle" method="post" enctype="multipart/form-data">
            <div class="container d-flex justify-content-center mt-3 align-items-center">
                <input type="file" name="dosya" id="dosya" class="mt-5" />
                <input type="submit" value="Değiştir" class="btn btn-warning mt-5" />
            </div>
        </form>


    </div>

</div>

