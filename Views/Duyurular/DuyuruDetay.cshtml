@model MVCKutuphane.Models.Entity.TBLDUYURULAR

@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<div class="col-md-6 mx-auto form-group">
    <h6 class="fw-bold ">Duyuru Güncelleme Sayfası</h6>
    <hr style="border:solid 2px black" />

    @using (Html.BeginForm("DuyuruGuncelle", "Duyurular", FormMethod.Post))
    {
        <div class="form-group mt-5" style="margin-bottom:15px">
            @Html.LabelFor(k => k.ID)
            @*@Html.HiddenFor(k => k.ID)*@
            @Html.TextBoxFor(k => k.ID, new { @class = "form-control" , @readonly = "readonly" })
            <br />
            <label>DUYURU KATEGORİ</label>
            @Html.TextBoxFor(k => k.KATEGORI, new { @class = "form-control", required = "required" })
            <br />
            <label>DUYURU İÇERİĞİ</label>
            @Html.TextAreaFor(k => k.ICERIK, new { @class = "form-control", required = "required" })
            <br />
            <label>DUYURU TARİHİ</label>
            @Html.TextBoxFor(k => k.TARIH, "{0:dd/MM/yyyy}", new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div>
            <button class="btn fw-semibold w-100" style="margin-top: 25px; margin-bottom: 50px; background-color: #202f44; color: aliceblue">Güncelle</button>
        </div>
    }
</div>


<style>
    /*Sayfa stilleri*/
    .d-flex-center {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .form-group {
        width: 100%;
        margin-top: 5%;
    }

    .form-control-custom, .btn-custom {
        width: 100%;
    }

    .col-md-6 {
        max-width: 275px; /* İstediğiniz maksimum genişliği ayarlayabilirsiniz */
        width: 100%;
    }
</style>
