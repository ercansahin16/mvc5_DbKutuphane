@using MVCKutuphane.Models.Entity

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<h6 class="fw-bold ">Kategoriler Listesi</h6>
<hr style="border:solid 2px black" />

<table class="table table-bordered mt-4 table-hover">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>İŞLEMLER</th>
    </tr>
    @{int sayac = 0; }
    @foreach (var ktg in Model)
    {
        sayac++;
        <tr>
            <td>@ktg.ID</td>
            <td>@ktg.ADI</td>
            <td>
                <a href="/Kategori/KategoriGetir/@ktg.ID" class="btn fw-semibold mx-auto  " style="background-color: #5073a3; color: aliceblue ">Güncelle</a>
            </td>
            <td>
                <a href="/Kategori/KategoriSil/@ktg.ID" class="btn fw-semibold mx-1  " style="background-color:#5073a3; color: aliceblue ">PasifYap</a>
            </td>
        </tr>
    }
    <h4 style="float:right">Veri Sayısı : @sayac</h4>
</table>
<a href="/Kategori/KategoriEkle" class="btn fw-semibold w-100" style="margin-top: 25px; margin-bottom: 50px; background-color: #202f44; color: aliceblue ">Yeni Kategori Ekle</a>
