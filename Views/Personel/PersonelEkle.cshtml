@model MVCKutuphane.Models.Entity.TBLPERSONEL
@{
    ViewBag.Title = "PersonelEkle";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<div class="col-md-6 mx-auto form-group">
    <h6 class="fw-bold ">Personel Ekleme Sayfası</h6>
    <hr style="border:solid 2px black" />
    <form method="post">
        <div>
            <br />

            <label class="fw-bolder">PERSONEL AD VE SOYAD</label>
            @*<input type="text" class="form-control" name="PERSONEL" />*@

            @Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(k => k.PERSONEL, "", new { @style = "color:red" })

            <div style="margin-top:15px;margin-bottom:20px" class="fw-bolder">
                <button class="btn fw-semibold w-100"  style="margin-top: 25px; margin-bottom: 50px; background-color: #202f44; color: aliceblue">Personel Ekle</button>

            </div>
        </div>

    </form>
    </div>


    <style>
        .d-flex-center {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-group {
            width: 100%;
            margin-top: 15%;
        }

        .form-control-custom, .btn-custom {
            width: 100%;
        }

        .col-md-6 {
            max-width: 275px; /* İstediğiniz maksimum genişliği ayarlayabilirsiniz */
            width: 100%;
        }
    </style>
