

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<link href="~/web2/css/style.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-<sha>" crossorigin="anonymous" />
<script src="~/web2/js/Chart1.js"></script>
<script src="~/web2/js/jquery.min.js"></script>
<script src="~/web2/js/jquery.vmap.js"></script>
<script src="~/web2/js/jquery.vmap.sampledata.js"></script>
<script src="~/web2/js/jquery.vmap.world.js"></script>
<link href="~/web2/css/jqvmap.css" rel="stylesheet" />

<script type="text/javascript">
    jQuery(document).ready(function () {
        jQuery('#vmap').vectorMap({
            map: 'world_en',
            backgroundColor: '#333333',
            color: '#ffffff',
            hoverOpacity: 0.7,
            selectedColor: '#666666',
            enableZoom: true,
            showTooltip: true,
            values: sample_data,
            scaleColors: ['#C8EEFF', '#006491'],
            normalizeFunction: 'polynomial'
        });
    });
</script>
<script>
    $(document).ready(function (c) {
        $('.alert-close6').on('click', function (c) {
            $('.world-map').fadeOut('slow', function (c) {
                $('.world-map').remove();
            });
        });
    });
</script>

<div class="list_of_members">
    <div class="sales">
        <div class="icon">
            <i class="fa-solid fa-coins"></i>
        </div>

        <div class="icon-text">
            <h3>@ViewBag.dgr4<span>&nbsp₺</span></h3>
            <p>Kasa</p>
        </div>

        <div class="clearfix"></div>
    </div>
    <div class="new-users">
        <div class="icon">
            <i class="fa-solid fa-users"></i>
        </div>
        <a href="/Üye/Index">
            <div class="icon-text">
                <h3>@ViewBag.dgr2</h3>
                <p>Toplam Üye</p>
            </div>
        </a>
            <div class="clearfix"></div>
    </div>
    <div class="orders">
        <div class="icon">
            <i class="fa-solid fa-book"></i>
        </div>
        <a href="/Kitap/Index">
            <div class="icon-text">
                <h3>@ViewBag.dgr</h3>
                <p>Kitap Sayısı</p>
            </div>
        </a>
            <div class="clearfix"></div>
    </div>
    <div class="visitors">
        <div class="icon">
            <i class="fa-solid fa-eye"></i>
        </div>
        <a href="/Odunc/Index">
            <div class="icon-text">
                <h3>@ViewBag.dgr3</h3>
                <p>Emanet Kitaplar</p>
            </div>
        </a>

        <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="total-sales">
    <div class="user-trends">
        <div class="alert-close7"> </div>

        <canvas id="bar" height="340" width="780"></canvas>
        <script>

            var barChartData = {
                labels: ["Ocak", "Şubat", "Mart", "Nisan", "Mayıs", "Haziran", "Temmuz"],
                datasets: [
                    {
                        fillColor: "rgba(255, 137, 167, 0.78)",
                        strokeColor: "rgba(220,220,220,1)",
                        data: [65, 59, 90, 81, 56, 55, 40]
                    },
                    {
                        fillColor: "rgba(140, 145, 255, 0.69)",
                        strokeColor: "rgba(151,187,205,1)",
                        data: [28, 48, 40, 19, 96, 27, 100]
                    }
                ]

            }

            var myLine = new Chart(document.getElementById("bar").getContext("2d")).Bar(barChartData);

        </script>
    </div>
    <div class="to-do">
        <div class="alert-close5"> </div>
        <h3>Notlar</h3>
        <div class="checkbox-form">
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Yayınevini Ara</label>
            </div>
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Emanet Kitaplar için Kontrol</label>
            </div>
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Kasayı kontrol et</label>
            </div>
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Haftasonu çalışması</label>
            </div>
            <div class="check">
                <label class="checkbox"><input type="checkbox" name="checkbox" checked=""><i> </i>Yeni kitap girişi</label>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="total-world">
    <div class="world-map">
        <div class="alert-close6"> </div>
        <h3>Dünya Haritası</h3>
        <p><span class="color1"></span>40%<span class="color2"></span>12%<span class="color3"></span>11%<span class="color4"></span>10%<span class="color5"></span>18%</p>
        <div class="clearfix"></div>
        <div id="vmap" style="width: 600px; height: 400px;"></div>
    </div>
    <div class="site-report">
        <div class="alert-close3"> </div>
        <h3>Sistem Rapor</h3>
        <div class="skills-top">
            <h5>Memnuniyet</h5>
            <h4>45%</h4>
            <div class="clearfix"></div>
            <div class="skills">
                <div class="skill" style="width:45%"></div>
            </div>
        </div>
        <div class="skills-top">
            <h5>Geri Dönüş</h5>
            <h4>68%</h4>
            <div class="clearfix"></div>
            <div class="skills">
                <div class="skill1" style="width:68%"></div>
            </div>
        </div>
        <div class="skills-top">
            <h5>Güvenirlik</h5>
            <h4>89%</h4>
            <div class="clearfix"></div>
            <div class="skills">
                <div class="skill2" style="width:89%"></div>
            </div>
        </div>
        <p>Okuyucunun, sayfa düzenine bakarken sayfanın okunabilir içeriğinin dikkatini dağıtacağı uzun süredir bilinen bir gerçektir.</p>
    </div>
    <div class="clearfix"></div>
</div>
<div class="mt-lg-5"></div>


<style>
    .list_of_members {
        display: flex;
        justify-content: space-around;
